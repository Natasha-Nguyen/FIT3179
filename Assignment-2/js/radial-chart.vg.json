{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple radial chart with embedded data.",
  "width": 400,
  "height": 300,
  "title": "Suicide Rate by Continent",
  "data": {
    "url": "continent_suicides.csv"
  },
  "params": [{
    "name": "Year_Select",
    "value": 2019,
    "bind": {
      "input": "range",
      "min": 1950,
      "max": 2019,
      "step": 1,
      "name": "Year"
    }
  }],
  "transform": [{
    "filter": "datum.Year == Year_Select"
  }
  ],
  "layer": [{
    "mark": {
      "type": "arc",
      "innerRadius": 20,
      "stroke": "#fff"
    }
  }, {
    "mark": {
      "type": "text",
      "radiusOffset": 10
    },
    "encoding": {
      "text": {
        "field": "Death Rate",
        "type": "quantitative"
      }
    }
  }],
  "encoding": {
    "theta": {
      "field": "Death Rate",
      "type": "quantitative",
      "stack": true
    },
    "radius": {
      "field": "Death Rate",
      "scale": {
        "type": "sqrt",
        "zero": true,
        "rangeMin": 20
      }
    },
    "color": {
      "field": "Region Name",
      "type": "nominal",
      "scale": {
        "domain": ["Africa", "Asia", "Central and South America", "Europe", "North America and the Caribbean", "Oceania"],
        "range": ["#4c78a8", "#f58518", "#e45756", "#72b7b2", "#54a24b", "#eeca3b"]
      }
    },
    "tooltip": [
      {
        "field": "Region Name",
        "type": "nominal"
      },
      {
        "field": "Death Rate",
        "type": "quantitative"
      }
    ]
  }
  
}
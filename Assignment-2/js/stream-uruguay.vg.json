{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Suicide Rate in Uruguay",
    "width": 800,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/Natasha-Nguyen/FIT3179/main/Assignment-2/data/suicide_Uruguay.csv"
    },
    "mark": "area",
    "transform": [
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "suicides",
              "as": "No of Suicides"
            }
          ],
          "groupby": [
            "AgeGroup",
            "Year"
          ]
        }
      ],
    "encoding": {
        "x": {
            "field": "Year"
        },
        "y": {
            "aggregate":"sum",
            "field": "No of Suicides",
            "axis": null,
            "stack": "center"
        },
        "color": {
            "field": "AgeGroup",
            "scale": {
                "scheme": "category20b"
            }
        },
        "tooltip": [
            {
                "field": "AgeGroup",
                "type": "nominal"
            },
            {
                "field": "No of Suicides",
                "type": "quantitative",
                "format": ","
            }
        ]
    }
}
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Natasha-Nguyen/FIT3179/main/Week10Homework/suicides_age_continent_year.csv"
  },
  "params": [
    {
      "name": "Year_Select",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1950,
        "max": 2019,
        "step": 1,
        "name": "Year"
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == Year_Select"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "suicides",
          "as": "Total Suicides"
        }
      ],
      "groupby": [
        "AgeGroup",
        "Region Name"
      ]
    }
  ],
  "encoding": {
    "x": {
      "field": "AgeGroup",
      "type": "nominal",
      "title": "Age Group",
      "sort": {
        "field": "AgeGroup"
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "Total Suicides",
      "type": "quantitative",
      "title": "Total Suicides"
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "color": {
          "field": "Region Name",
          "type": "nominal",
          "scale": {
            "domain": ["Africa", "Asia", "Central and South America", "Europe", "North America and the Caribbean", "Oceania"],
            "range": ["#4c78a8", "#f58518", "#e45756", "#72b7b2", "#54a24b", "#eeca3b"]
          }
        },
        "tooltip": [
          {
            "field": "Region Name",
            "type": "nominal"
          },
          {
            "field": "AgeGroup",
            "type": "nominal"
          },
          {
            "field": "Total Suicides",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "bottom",
        "dx": 15,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "aggregate": "sum",
          "field": "Total Suicides",
          "type": "quantitative"
        },
        "color": {
          "value": "black"
        }
      }
    }
  ],
  "width": 400,
  "height": 300,
  "title": "Total Suicides by Age and Location"
}
